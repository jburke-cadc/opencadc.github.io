<?xml version="1.0" encoding="UTF-8"?>

<xs:schema
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.opencadc.org/xml/VOSITables-ext/v0.1"
        attributeFormDefault="qualified">

    <xs:attribute name="columnID">
        <xs:annotation>
            <xs:documentation>
                Defines a TapSchema column for service descriptors, enabling service descriptor output in a VOSITable.
            </xs:documentation>
        </xs:annotation>
        <xs:simpleType>
            <xs:restriction base="xs:string"/>
        </xs:simpleType>
    </xs:attribute>

</xs:schema>
